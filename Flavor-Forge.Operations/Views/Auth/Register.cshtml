@model Flavor_Forge.Entities.User
@{
    ViewBag.Title = "Register";
}
<!-- Link to account.css -->
<!--<link href="~/css/account.css" rel="stylesheet" type="text/css" />-->
<div class="pt-5">
    <h1 class="text-center">Register</h1>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div class="card card-body">
                    <!-- Register form -->
                    @using (Html.BeginForm("Register", "Auth"))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group required">
                            @Html.LabelFor(m => m.Username, "Username / Email", new { @for = "username" })
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control text-lowercase", @id = "username", required = "required" })
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group required">
                            <label class="d-flex flex-row align-items-center" for="password">
                                @Html.LabelFor(m => m.Password, "Password", new { @class = "mr-auto" })
                            </label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "password", required = "required" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group required">
                            <label class="d-flex flex-row align-items-center" for="confirmPassword">
                                Confirm Password
                            </label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required="required" />
                            <span id="passwordError" class="text-danger"></span>
                        </div>

                        <div class="form-group pt-1">
                            <button class="btn btn-primary btn-block" type="submit" id="registerButton">Register</button>
                        </div>
                    }
                    <p class="small-xl pt-3 text-center">
                        <span class="text-muted">Already have an account?</span>
                        <a href="@Url.Action("Login","Auth")">Log In</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#submitForm').on('submit', function (e) {
                var password = $('#password').val();
                var confirmPassword = $('#confirmPassword').val();

                if (password !== confirmPassword) {
                    e.preventDefault();
                    $('#passwordError').text('Passwords do not match');
                    return false;
                }

                $('#passwordError').text('');
                return true;
            });

            // Real-time validation
            $('#confirmPassword').on('input', function () {
                var password = $('#password').val();
                var confirmPassword = $(this).val();

                if (password !== confirmPassword) {
                    $('#passwordError').text('Passwords do not match');
                } else {
                    $('#passwordError').text('');
                }
            });
        });
    </script>
}

<style>
    body {
        background: #f8f9fa !important;
    }

    h1 {
        color: black;
        padding-bottom: 2rem;
        font-weight: bold;
    }

    a {
        color: #333;
    }

        a:hover {
            color: #0d6efd;
            text-decoration: none;
        }

    .form-control:focus {
        color: #000;
        background-color: #fff;
        border: 2px solid #0d6efd;
        outline: 0;
        box-shadow: none;
    }

    .btn {
        background: #0d6efd;
        border: #0d6efd;
    }

        .btn:hover {
            background: #0d6efd;
            border: #0d6efd;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }
</style>