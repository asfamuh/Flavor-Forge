@model Flavor_Forge.Entities.Recipe

@{
    ViewData["Title"] = "Recipe Details";
}

<div class="container py-5">
    <!-- Recipe Header -->
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8">
            <div class="text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.RecipeName" class="recipe-image mb-4">
                }
                <h1 class="display-4 mb-3">@Model.RecipeName</h1>
                <div class="recipe-meta mb-3">
                    <span class="badge bg-primary rounded-pill me-2">
                        <i class="fas fa-list-ul me-1"></i>
                        @(ViewBag.Ingredients?.Count ?? 0) Ingredients
                    </span>
                    @if (!string.IsNullOrEmpty(Model.Author))
                    {
                        <span class="badge bg-secondary rounded-pill">
                            <i class="fas fa-user me-1"></i>
                            @Model.Author
                        </span>
                    }
                </div>
                <form asp-action="Details" asp-controller="Recipe" method="post">
                    @Html.HiddenFor(m => m.RecipeName)
                    @Html.HiddenFor(m => m.ImageUrl)
                    @Html.HiddenFor(m => m.Author)
                    @Html.HiddenFor(m => m.Instructions)

                    @if (ViewBag.Ingredients != null)
                    {
                        for (int i = 0; i < ViewBag.Ingredients.Count; i++)
                        {
                            <input type="hidden" name="ingredients[@i].IngredientName" value="@ViewBag.Ingredients[i].IngredientName" />
                            <input type="hidden" name="ingredients[@i].Quantity" value="@ViewBag.Ingredients[i].Quantity" />
                            <input type="hidden" name="ingredients[@i].Unit" value="@ViewBag.Ingredients[i].Unit" />
                        }
                    }

                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-bookmark me-2"></i>
                        Save Recipe
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Recipe Content -->
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4 p-md-5">
                    <!-- Ingredients Section -->
                    <div class="ingredients-section mb-4">
                        <h4 class="mb-3">
                            <i class="fas fa-shopping-basket text-primary me-2"></i>
                            Ingredients
                        </h4>
                        <ul class="ingredients-list">
                            @if (ViewBag.Ingredients != null)
                            {
                                @foreach (var ingredient in ViewBag.Ingredients)
                                {
                                    <li>
                                        <div class="ingredient-measure">
                                            @if (ingredient.Quantity != 0)
                                            {
                                                <span class="quantity">@ingredient.Quantity</span>
                                            }
                                            @if (!string.IsNullOrEmpty(ingredient.Unit))
                                            {
                                                <span class="unit">@ingredient.Unit</span>
                                            }
                                        </div>
                                        <span class="ingredient-name">@ingredient.IngredientName</span>
                                    </li>
                                }
                            }
                        </ul>
                    </div>

                    <!-- Instructions Section -->
                    <section class="recipe-section">
                        <h2 class="h4 mb-4">
                            <i class="fas fa-utensils text-primary me-2"></i>
                            Instructions
                        </h2>
                        <div class="instructions-content">
                            <p class="recipe-instructions">@Model.Instructions</p>
                        </div>
                    </section>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <!-- Existing buttons -->
                <a class="btn btn-primary btn-lg me-2" asp-controller="Recipe" asp-action="Search">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Search
                </a>
                <a class="btn btn-outline-primary btn-lg" href="#" onclick="window.print()">
                    <i class="fas fa-print me-2"></i>
                    Print Recipe
                </a>
                @if (Model.Author == ViewBag.CurrentUsername) // Check if the logged-in user is the author
                {
                    <a class="btn btn-warning btn-lg" asp-controller="Recipe" asp-action="Edit" asp-route-recipeId="@Model.RecipeId">
                        <i class="fas fa-edit me-2"></i>
                        Update Recipe
                    </a>
                }
            </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* General Styles */
    body {
        background-color: #f8f9fa;
    }

    /* Card Styles */
    .card {
        background: white;
        transition: all 0.3s ease;
    }

    /* Recipe Meta Styles */
    .recipe-meta {
        margin-bottom: 2rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }

    /* Section Styles */
    .recipe-section {
        position: relative;
    }

        .recipe-section:not(:last-child)::after {
            content: '';
            position: absolute;
            bottom: -2rem;
            left: 0;
            right: 0;
            height: 1px;
            background: rgba(0,0,0,0.1);
        }

    /* Updated Ingredients List Styles */
    .ingredients-section {
        background-color: #f8f9fa;
        border-radius: 1rem;
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .ingredients-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .ingredients-list li {
            display: flex;
            align-items: center;
            padding: 0.75rem 0;
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }

            .ingredients-list li:last-child {
                border-bottom: none;
            }

    .ingredient-measure {
        min-width: 120px;
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .quantity {
        font-weight: 600;
        color: #0d6efd;
        font-size: 1.1rem;
    }

    .unit {
        color: #6c757d;
        font-size: 0.9rem;
        text-transform: lowercase;
    }

    .ingredient-name {
        font-size: 1.1rem;
        color: #2c3e50;
    }

    /* Add hover effect */
    .ingredients-list li:hover {
        background-color: rgba(13, 110, 253, 0.05);
        border-radius: 0.5rem;
        padding-left: 1rem;
        padding-right: 1rem;
        margin: 0 -1rem;
        transition: all 0.2s ease;
    }

    /* Remove the old ingredient styles that might conflict */
    .ingredients-section li span:first-child,
    .ingredients-section li span:nth-child(2) {
        min-width: unset;
    }

    /* Instructions Styles */
    .recipe-instructions {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #2c3e50;
        white-space: pre-line;
    }

    /* Button Styles */
    .btn {
        padding: 0.75rem 1.5rem;
        font-weight: 500;
    }

    .btn-lg {
        padding: 1rem 2rem;
    }

    .btn-primary {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

    /* Recipe Image Styles */
    .recipe-image {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1080;">
        <div class="toast align-items-center text-white bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
            </div>
        </div>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="toast-container position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 1080;">
        <div class="toast align-items-center text-white bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Auto-hide the toast after 3 seconds
        $(document).ready(function () {
            setTimeout(function () {
                $('.toast').fadeOut('slow');
            }, 3000);
        });
    </script>
}