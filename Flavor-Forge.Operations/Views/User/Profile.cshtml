@model List<Flavor_Forge.Entities.Recipe>
@{
    ViewData["Title"] = "Profile";
    var username = ViewBag.Username;
    var image = ViewBag.Image;
    var age = ViewBag.Age;
    var bio = ViewBag.Bio;
}

<div class="container py-5">
    <!-- Profile Header -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="mb-0">@username's Profile</h2>
        </div>
    </div>


    <!-- Profile Information Card -->
    <div class="container bootstrap snippets bootdey mb-5">
        <div class="panel-body inf-content">
            <div class="row">
                <div class="col-md-4">
                    @if (string.IsNullOrEmpty(image)) {
                        <img src="~/recipe-images/defpfp.jpg" />
                    }
                    else {
                        <img src=@image class="card-img-top recipe-thumbnail" alt="@username">
                    }
                </div>
                <div class="col-md-6">
                    <strong>Information</strong><br />
                    <div class="table-responsive">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td><strong><span class="glyphicon glyphicon-user text-primary"></span> Name</strong></td>
                                    <td class="text-primary">@username</td>
                                </tr>
                                <tr>
                                    <td><strong><span class="glyphicon glyphicon-envelope text-primary"></span> Age</strong></td>
                                    <td class="text-primary">@age</td>
                                </tr>
                                <tr>
                                    <td><strong><span class="glyphicon glyphicon-calendar text-primary"></span> Bio</strong></td>
                                    <td class="text-primary">@bio</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Saved Recipes Section -->
    <div class="row">
        <div class="col-12">
            <h3 class="mb-4">Saved Recipes</h3>

            @if (Model != null && Model.Any())
            {
                <div class="row g-4">
                    @foreach (var recipe in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card h-100 recipe-card shadow-sm">
                                @if (!string.IsNullOrEmpty(recipe.ImageUrl))
                                {
                                    <img src="@recipe.ImageUrl" class="card-img-top recipe-thumbnail" alt="@recipe.RecipeName">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@recipe.RecipeName</h5>
                                    <p class="card-text text-muted">
                                        <small>By @recipe.Author</small>
                                    </p>
                                </div>
                                <div class="card-footer bg-white border-top-0 d-flex gap-2">
                                    <a href="@Url.Action("Details", "Recipe", new { mealName = recipe.RecipeName, mealAuthor = recipe.Author })"
                                       class="btn btn-outline-primary flex-grow-1">
                                        View Full Recipe
                                    </a>
                                    <form asp-controller="Recipe" asp-action="DeleteRecipe" method="post"
                                          onsubmit="return confirm('Are you sure you want to unsave this recipe?');">
                                        <input type="hidden" name="recipeId" value="@recipe.RecipeId" />
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle me-2"></i>You haven't saved any recipes yet.
                </div>
            }
        </div>
    </div>
</div>

<style>
    .inf-content {
        border: 1px solid #DDDDDD;
        border-radius: 10px;
        box-shadow: 7px 7px 7px rgba(0, 0, 0, 0.3);
        display: flex;
        align-items: center;
        padding: 20px;
    }

        .inf-content .col-md-4 img {
            width: 100%;
            max-width: 500px;
            border-radius: 50%;
        }

        .inf-content .col-md-6 {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

    .table-user-information {
        margin: 0;
    }

    .recipe-card {
        transition: transform 0.2s;
        border: none;
        overflow: hidden;
    }

        .recipe-card:hover {
            transform: translateY(-5px);
        }

    .recipe-thumbnail {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: calc(0.375rem - 1px);
        border-top-right-radius: calc(0.375rem - 1px);
    }

    .card-title {
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
        font-weight: 500;
        padding: 1rem 1rem 0 1rem;
    }

    .card-text {
        padding: 0 1rem;
    }

    .card-body {
        padding: 0;
    }

    .card-footer {
        padding: 1rem;
    }
</style>
